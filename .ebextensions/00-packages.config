packages:
  yum:
    gcc: []
    gcc-c++: []
    python27-devel: []
    atlas-sse3-devel: []
    lapack-devel: []
    postgresql92-devel: []
    python27-numpy: []
    python27-scipy: []

container_commands:  
  00_AddGlobalWSGIGroupAccess: 
    command: "if ! grep -q 'WSGIApplicationGroup %{GLOBAL}' ../wsgi.conf ; then echo 'WSGIApplicationGroup %{GLOBAL}' >> ../wsgi.conf; fi;"
  01_UseSitePackages:
    command: "virtualenv --system-site-packages /opt/python/run/venv/"  
